{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off"
    // "no-unresolved": "warn"
  },
  "settings": {
    "alias": {
      "map": [
        ["@src", "./src"],
        ["@assets", "./src/assets/"],
        ["@icons", "./src/assets/icons.js"]
      ],
      "extensions": [".js", ".jsx", ".json"]
    }
  }
}
